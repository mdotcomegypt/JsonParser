<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layoutDirection="rtl"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:layoutDirection="rtl"
            android:orientation="horizontal"
            android:paddingBottom="5dp"
            android:paddingTop="5dp">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/eventBG"
                android:gravity="left"
                android:minWidth="120dp"
                android:layoutDirection="rtl"
                android:orientation="horizontal"
                android:layout_marginRight="20dp"
                android:padding="5dp">



                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/event_border_left"
                    android:gravity="left"
                    android:layoutDirection="rtl"
                    android:orientation="vertical"
                    android:padding="5dp">


                    <TextView
                        android:id="@+id/player1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="marquee"
                        android:maxLines="1"
                        android:maxWidth="100dp"
                        android:textColor="@color/eventTitle"
                        android:textSize="11dp" />


                    <TextView
                        android:id="@+id/type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="marquee"
                        android:maxLines="1"
                        android:text="Title"
                        android:maxWidth="100dp"
                        android:textColor="@color/eventTxt"
                        android:textSize="10dp"
                        android:visibility="gone" />


                    <TextView
                        android:id="@+id/player2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="marquee"
                        android:maxLines="1"
                        android:text="Title"
                        android:maxWidth="100dp"
                        android:textColor="@color/eventSubTitle"
                        android:textSize="10dp" />
                </LinearLayout>


                <TextView
                    android:id="@+id/min"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:ellipsize="marquee"
                    android:maxLines="1"
                    android:layout_margin="5dp"
                    android:text="40"
                    android:textColor="@color/eventMin"
                    android:textSize="12dp" />

            </LinearLayout>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/match_arrow_to_left" />


        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="30dp"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <ImageView
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:background="@color/timeline" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/white_circle"
            android:padding="5dp"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/icn"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_centerInParent="true"
                android:src="@drawable/score_icn"
                />

        </RelativeLayout>

        <ImageView
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:background="@color/timeline" />


    </LinearLayout>


    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">


    </RelativeLayout>


</LinearLayout>




















