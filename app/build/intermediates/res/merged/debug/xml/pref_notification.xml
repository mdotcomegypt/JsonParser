<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- A 'parent' preference, which enables/disables child preferences (below)
         when checked/unchecked. -->
    <SwitchPreference
        android:defaultValue="true"
        android:key="key_notifications"
        android:title="@string/setting_general_GT" />





    <SwitchPreference
        android:defaultValue="true"
        android:key="key_notification_lineup"
        android:dependency="key_notifications"
        android:title="@string/setting_notification_lineup"
        android:summary="@string/setting_notification_lineup_txt" >
    </SwitchPreference>

    <SwitchPreference
        android:defaultValue="true"
        android:key="key_notification_start"
        android:dependency="key_notifications"
        android:title="@string/setting_notification_start"
        android:summary="@string/setting_notification_start_txt" >
    </SwitchPreference>


    <SwitchPreference
        android:defaultValue="true"
        android:key="key_notification_goals"
        android:dependency="key_notifications"
        android:title="@string/setting_notification_goals"
        android:summary="@string/setting_notification_goals_txt" >
    </SwitchPreference>


    <SwitchPreference
        android:defaultValue="true"
        android:key="key_notification_end"
        android:dependency="key_notifications"
        android:title="@string/setting_notification_end"
        android:summary="@string/setting_notification_end_txt" >
    </SwitchPreference>


    <SwitchPreference
        android:defaultValue="true"
        android:key="key_notification_highlights"
        android:dependency="key_notifications"
        android:title="@string/setting_notification_highlights"
        android:summary="@string/setting_notification_highlights_txt" >
    </SwitchPreference>

    <SwitchPreference
        android:defaultValue="true"
        android:key="key_notification_breakingnews"
        android:dependency="key_notifications"
        android:title="@string/setting_notification_breakingnews"
        android:summary="@string/setting_notification_breakingnews_txt" >
    </SwitchPreference>

    <SwitchPreference
        android:defaultValue="true"
        android:key="key_notification_videos"
        android:dependency="key_notifications"
        android:title="@string/setting_notification_video"
        android:summary="@string/setting_notification_video_desc">

    </SwitchPreference>


</PreferenceScreen>
